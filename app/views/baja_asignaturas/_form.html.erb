<%= form_for(baja_asignatura) do |f| %>
  <% if baja_asignatura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(baja_asignatura.errors.count, "error") %> prohibited this baja_asignatura from being saved:</h2>

