<h1>Baja Asignaturas</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Clave</th>
      <th>Creado por</th>
      <th>Boleta</th>
      <th>Fecha</th>
      <th>Validacion consejero</th>
      <th>Validacion coordinador</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baja_asignaturas.each do |baja_asignatura| %>
      <tr>
        <td><%= baja_asignatura.nombre %></td>
        <td><%= baja_asignatura.clave %></td>
        <td><%= baja_asignatura.user.nombre %></td>
        <td><%= baja_asignatura.user.boleta %></td>
        <td><%= baja_asignatura.created_at.strftime("%d/%m/%y a las %T %P") %></td>
        <td><%= baja_asignatura.valida_consejero ? 'Si' : 'No' %></td>
        <td><%= baja_asignatura.valida_coordinador ? 'Si' : 'No' %></td>
        <td><%= baja_asignatura.estado %></td>
        <td><%= link_to 'Información', baja_asignatura %></td>
        <% if can? :update, baja_asignatura %>
          <td><%= link_to 'Editar', edit_baja_asignatura_path(baja_asignatura) %></td>
        <% end %>
        <% if can? :destroy, baja_asignatura %>
          <td><%= link_to 'Eliminar', baja_asignatura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if can? :create, BajaAsignatura %>
  <%= link_to 'Crear petición de baja de asignatura', new_baja_asignatura_path %>
<% end %>
