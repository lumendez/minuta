<h3 class="sub">Consejeros de Ingenier&iacute;a de Telecomunicaciones</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @telecom_consejeros.each do |telecom_consejero| %>
      <tr>
        <td><%= telecom_consejero.nombre %></td>
        <td><%= link_to 'Detalles', telecom_consejero %></td>
        <td><%= link_to 'Editar', edit_telecom_consejero_path(telecom_consejero) %></td>
        <td><%= link_to 'Eliminar', telecom_consejero, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo consejero', new_telecom_consejero_path %>
