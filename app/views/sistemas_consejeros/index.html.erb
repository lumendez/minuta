<h3 class="sub">Consejeros de Ingenier&iacute;a de Sistemas</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @sistemas_consejeros.each do |sistemas_consejero| %>
      <tr>
        <td><%= sistemas_consejero.nombre %></td>
        <td><%= link_to 'Detalles', sistemas_consejero %></td>
        <td><%= link_to 'Editar', edit_sistemas_consejero_path(sistemas_consejero) %></td>
        <td><%= link_to 'Eliminar', sistemas_consejero, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear nuevo consejero', new_sistemas_consejero_path %>
