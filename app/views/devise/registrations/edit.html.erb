<h3 class="sub">Editar usuario</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>

  <div class="form-group">
    <%= f.label :boleta %><br>
    <%= f.text_field :boleta %>
  </div>

  <div class="form-group">
    <%= f.label :sepi_programa_id, "Programa" %><br>
    <%= collection_select(:user, :sepi_programa_id, SepiPrograma.all, :id, :nombre, {prompt: true}) %>
  </div>

  <div class="form-group">
    <%= f.label :consejero_id %><br>
    <%= collection_select(:user, :consejero_id, Consejero.all, :id, :nombre, {prompt: true}) %>
  </div>

  <div class="form-group">
    <%= f.label :coordinador_nombre_id, "Coordinador" %><br>
    <%= collection_select(:user, :coordinador_nombre_id, CoordinadorNombre.all, :id, :nombre, {prompt: true}) %>
  </div>

  <div class="form-group">
    <%= f.label :tipos_usuario_id, "Tipo de usuario" %><br>
    <%= collection_select(:user, :tipos_usuario_id, TiposUsuario.all, :id, :tipo, {prompt: true}) %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar datos" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete %></p>

<%= link_to "Regresar", :back %>
