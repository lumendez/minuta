<h3 class="sub">Registrar nuevo usuario</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :nombre, 'Nombre(s)' %><br>
    <%= f.text_field :nombre, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :paterno, 'Apellido pateno' %><br>
    <%= f.text_field :paterno, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :materno, 'Apellido materno' %><br>
    <%= f.text_field :materno, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-2">
    <%= f.label :boleta %><br>
    <%= f.text_field :boleta, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-5">
    <%= f.label :sepi_programa_id, "Programa" %><br>
    <%= collection_select(:user, :sepi_programa_id, SepiPrograma.all, :id, :nombre, {prompt: true}, class:'form-control') %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-4">
    <%= f.label :consejero_id %><br>
    <%= collection_select(:user, :consejero_id, ElectricaConsejero.all + ElectronicaConsejero.all +
      MecanicaConsejero.all + TelecomConsejero.all + SistemasConsejero.all, :id, :nombre, {prompt: true}, class:'form-control') %>
  </div>
</div>

<!--<div class="row">
  <div class="form-group col-md-4">
    <%#= f.label :coordinador_nombre_id, "Coordinador" %><br>
    <%#= collection_select(:user, :coordinador_nombre_id, CoordinadorNombre.all, :id, :nombre, {prompt: true}, class:'form-control') %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-4">
    <%#= f.label :area %><br>
    <%#= collection_select(:user, :area, Area.all, :nombre, :nombre, {prompt: true}, class:'form-control') %>
  </div>
</div>-->

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como m&iacute;nimo)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
  </div>
</div>

<div class="row">
  <div class="actions col-md-2">
    <%= f.submit "Registrar", class:'btn btn-primary' %>
  </div>
</div>
<% end %>

<br>
<%= link_to 'Regresar', root_path %>

<%= render "devise/shared/links" %>
<script>
function matchUp(selected, toselect)
{
  var idx = selected.prop('selectedIndex');
  toselect.prop('selectedIndex', idx);
}


$('#user_sepi_programa_id').change(
  function() {
    matchUp($('#user_sepi_programa_id'), $('#user_area'));
  }
);

$('#user_area').change(
  function() {
    matchUp($('#user_area'), $('#ser_sepi_programa_id'));
  }
);
</script>
