<h2 class="sub">Consultar minuta</h2>
<div class="row">
  <div class="col-md-2">
    <p>
      Consultar minuta de:
    </p>
    <%= form_tag(busqueda_buscar_minutas_path, method: :get) do %>
      <%= text_field_tag :inicio, params[:inicio], class:'form-control inicio', "data-provide" => 'datepicker' %><br>
    <p>
      Hasta:
    </p>
      <%= text_field_tag :fin, params[:fin], class:'form-control fin', "data-provide" => 'datepicker' %>
      <br>
      <%= submit_tag 'Consultar minuta', name: nil, class:'btn btn-md btn-primary' %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.inicio').datepicker({format: 'yyyy-mm-dd', language: "es" });
    $('.fin').datepicker({format: 'yyyy-mm-dd', language: "es" });
  });
</script>
