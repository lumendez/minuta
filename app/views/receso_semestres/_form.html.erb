<%= form_for(receso_semestre) do |f| %>
  <% if receso_semestre.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(receso_semestre.errors.count, "error") %> prohibited this receso_semestre from being saved:</h2>

      <ul>
      <% receso_semestre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="form-group col-md-3">
    <%= f.label :semestre %><br>
    <%= collection_select(:receso_semestre, :semestre, ClaveSemestre.all, :semestre, :semestre, {prompt: 'Seleccione'}, class:'form-control') %>
  </div>
</div>

<% if can? :validar_consejero, receso_semestre %>
<div class="row">
  <div class="form-group">
    <%= f.label :valida_consejero %><br>
    <%= f.check_box :valida_consejero %>
  </div>
</div>
<% end %>

<% if can? :validar_coordinador, receso_semestre %>
<div class="row">
  <div class="form-group">
    <%= f.label :valida_coordinador %><br>
    <%= f.check_box :valida_coordinador %>
  </div>
</div>
<% end %>

<% if can? :cambiar_estado, receso_semestre %>
<div class="row">
  <div class="form-group">
    <%= f.label :estado %><br>
    <%= collection_select(:receso_semestre, :estado, Estado.all, :estado, :estado, {prompt: true}) %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="form-group col-md-2">
    <%= f.submit "Enviar", class: "btn btn-md btn-primary" %>
  </div>
</div>
<% end %>
