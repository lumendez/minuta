<h1>Cursar Asignaturas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Clave</th>
      <th>Unidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursar_asignaturas.each do |cursar_asignatura| %>
      <tr>
        <td><%= cursar_asignatura.nombre %></td>
        <td><%= cursar_asignatura.clave %></td>
        <td><%= cursar_asignatura.unidad %></td>
        <td><%= link_to 'Show', cursar_asignatura %></td>
        <td><%= link_to 'Edit', edit_cursar_asignatura_path(cursar_asignatura) %></td>
        <td><%= link_to 'Destroy', cursar_asignatura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

