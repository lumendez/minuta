<h3 class="sub">Petición de revocación de baja</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Director</th>
      <th>Creado por</th>
      <th>Boleta</th>
      <th>Progrma</th>
      <th>Valida consejero</th>
      <th>Valida coordinador</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @revocacion_registros.each do |revocacion_registro| %>
      <tr>
        <td><%= revocacion_registro.titulo %></td>
        <td><%= revocacion_registro.director %></td>
        <td><%= revocacion_registro.user.nombre_paterno_materno %></td>
        <td><%= revocacion_registro.user.boleta %></td>
        <td><%= revocacion_registro.user.sepi_programa.nombre %></td>
        <td><%= revocacion_registro.valida_consejero %></td>
        <td><%= revocacion_registro.valida_coordinador %></td>
        <td><%= revocacion_registro.estado %></td>
        <td><%= link_to 'Mostrar', revocacion_registro %></td>
        <td><%= link_to 'Editar', edit_revocacion_registro_path(revocacion_registro) %></td>
        <td><%= link_to 'Eliminar', revocacion_registro, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear petición para solicitar revocación de baja', new_revocacion_registro_path %>
