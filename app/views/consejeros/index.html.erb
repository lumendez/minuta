<h3 class="sub">Nombres de los consejeros</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @consejeros.each do |consejero| %>
      <tr>
        <td><%= consejero.nombre %></td>
        <td><%= link_to 'Información', consejero %></td>
        <td><%= link_to 'Editar', edit_consejero_path(consejero) %></td>
        <td><%= link_to 'Eliminar', consejero, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar nuevo consejero', new_consejero_path, class: "btn btn-md btn-default" %>
