  <div class="form-group">
    <%= f.label :actual %><br>
    <%= collection_select(:cambiar_asignatura, :actual, ElectricaAsignatura.all, :nombre, :nombre, {prompt: 'Seleccione'}) %>
  </div>

  <div class="form-group">
    <%= f.label :clave %><br>
    <%= collection_select(:cambiar_asignatura, :clave_actual, ElectricaAsignatura.all, :clave, :clave, {prompt: 'Seleccione'}) %>
  </div>

  <div class="form-group">
    <% if can? :validar_consejero, cambiar_asignatura %>
      <%= f.label :valida_consejero %><br>
      <%= f.check_box :valida_consejero %>
    <% end %>
  </div>

  <div class="form-group">
    <% if can? :validar_coordinador, cambiar_asignatura %>
      <%= f.label :valida_coordinador %><br>
      <%= f.check_box :valida_coordinador %>
    <% end %>
  </div>

  <div class="form-group">
    <% if can? :cambiar_estado, cambiar_asignatura %>
      <%= f.label :estado %><br>
