      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :anterior %><br>
      <%= collection_select(:cambiar_asignatura, :anterior, ElectricaAsignatura.all, :nombre, :nombre, {prompt: 'Seleccione'}) %>
  </div>

  <div class="form-group">
    <%= f.label :clave %><br>
    <%= collection_select(:cambiar_asignatura, :clave_anterior, ElectricaAsignatura.all, :clave, :clave, {prompt: 'Seleccione'}) %>
