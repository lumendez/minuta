    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Crear peticiÃ³n", class: "btn btn-md btn-primary" %>
  </div>
<% end %>
<script>
function matchUp(selected, toselect)
{
  var idx = selected.prop('selectedIndex');
  toselect.prop('selectedIndex', idx);
}


$('#cambiar_asignatura_anterior').change(
  function() {
    matchUp($('#cambiar_asignatura_anterior'), $('#cambiar_asignatura_clave_anterior'));
  }
);

$('#cambiar_asignatura_clave_anterior').change(
  function() {
    matchUp($('#cambiar_asignatura_clave_anterior'), $('#cambiar_asignatura_anterior'));
  }
);

$('#cambiar_asignatura_actual').change(
  function() {
    matchUp($('#cambiar_asignatura_actual'), $('#cambiar_asignatura_clave_actual'));
  }
);

$('#cambiar_asignatura_clave_actual').change(
  function() {
    matchUp($('#cambiar_asignatura_clave_actual'), $('#ambiar_asignatura_actual'));
  }
);
</script>
