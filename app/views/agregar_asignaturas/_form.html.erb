<script>
function matchUp(selected, toselect)
{
  var idx = selected.prop('selectedIndex');
  toselect.prop('selectedIndex', idx);
}


$('#agregar_asignatura_nombre').change(
  function() {
    matchUp($('#agregar_asignatura_nombre'), $('#agregar_asignatura_clave'));
  }
);

