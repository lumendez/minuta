<h3 class="sub">Peticiones para agregar asignaturas</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Clave</th>
      <th>Creado por</th>
      <th>Boleta</th>
      <th>Fecha</th>
      <th>Validacion consejero</th>
      <th>Validacion coordinador</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agregar_asignaturas.each do |agregar_asignatura| %>
      <tr>
        <td><%= agregar_asignatura.nombre %></td>
        <td><%= agregar_asignatura.clave %></td>
        <td><%= agregar_asignatura.user.nombre %></td>
        <td><%= agregar_asignatura.user.boleta %></td>
        <td><%= agregar_asignatura.created_at.strftime("%d/%m/%y a las %T %P") %></td>
        <td><%= agregar_asignatura.valida_consejero ? 'Si' : 'No' %></td>
        <td><%= agregar_asignatura.valida_coordinador ? 'Si' : 'No' %></td>
        <td><%= agregar_asignatura.estado %></td>
        <td><%= link_to 'Show', agregar_asignatura %></td>
        <td><%= link_to 'Edit', edit_agregar_asignatura_path(agregar_asignatura) %></td>
        <td><%= link_to 'Destroy', agregar_asignatura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar nueva asignatura', new_agregar_asignatura_path %>
