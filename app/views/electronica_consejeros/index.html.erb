<h3 class="sub">Consejeros de Ingenier&iacute;a Electr&oacute;nica</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @electronica_consejeros.each do |electronica_consejero| %>
      <tr>
        <td><%= electronica_consejero.nombre %></td>
        <td><%= link_to 'Detalles', electronica_consejero %></td>
        <td><%= link_to 'Editar', edit_electronica_consejero_path(electronica_consejero) %></td>
        <td><%= link_to 'Eliminar', electronica_consejero, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

