<p id="notice"><%= notice %></p>

<h1>Cambiar Temas</h1>

<table>
  <thead>
    <tr>
      <th>Anterior</th>
      <th>Actual</th>
      <th>Creado por</th>
      <th>Boleta</th>
      <th>Fecha</th>
      <th>Validacion consejero</th>
      <th>Validacion coordinador</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cambiar_temas.each do |cambiar_tema| %>
      <tr>
        <td><%= cambiar_tema.anterior %></td>
        <td><%= cambiar_tema.actual %></td>
        <td><%= cambiar_tema.user.nombre %></td>
        <td><%= cambiar_tema.user.boleta %></td>
        <td><%= cambiar_tema.created_at.strftime("%d/%m/%y a las %T %P") %></td>
        <td><%= cambiar_tema.valida_consejero ? 'Si' : 'No' %></td>
        <td><%= cambiar_tema.valida_coordinador ? 'Si' : 'No' %></td>
        <td><%= cambiar_tema.estado %></td>
        <td><%= link_to 'Show', cambiar_tema %></td>
        <td><%= link_to 'Edit', edit_cambiar_tema_path(cambiar_tema) %></td>
        <td><%= link_to 'Destroy', cambiar_tema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

