<div id="filterrific_results">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido paterno</th>
        <th>Apellido materno</th>
        <th>Boleta</th>
        <th>Tipo de usuario</th>
        <th>Programa</th>
        <th>Consejero</th>
        <th>Área</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nombre %></td>
          <td><%= user.paterno %></td>
          <td><%= user.materno %></td>
          <% if user.boleta.empty? %>
            <td>Sin boleta</td>
          <% else %>
            <td><%= user.boleta %></td>
          <% end %>
          <td><%= user.tipos_usuario.tipo %></td>
          <% if user.sepi_programa.nil? %>
            <td>Sin programa</td>
          <% else %>
            <td><%= user.sepi_programa.nombre %></td>
          <% end %>
          <% if user.consejero.nil? %>
          <td>Sin consejero</td>
          <% else %>
          <!--<td><%#= User.find_by(id: user.consejero_id).nombre_paterno_materno %></td>-->
          <td><%= user.consejero_nombre(user.consejero_id) %></td>
          <% end %>
          <td><%= user.area %></td>
          <td><%= link_to 'Detalles', user %></td>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users, theme: 'twitter-bootstrap-3', param_name: :pagina %>
</div>
