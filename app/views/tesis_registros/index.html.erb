<p id="notice"><%= notice %></p>

<h1>Tesis Registros</h1>

<table>
  <thead>
    <tr>
      <th>Tema</th>
      <th>Director</th>
      <th>Presidente</th>
      <th>Secretario</th>
      <th>Primer vocal</th>
      <th>Segundo vocal</th>
      <th>Tercer vocal</th>
      <th>Suplente</th>
      <th>Creado por</th>
      <th>Boleta</th>
      <th>Fecha</th>
      <th>Validacion consejero</th>
      <th>Validacion coordinador</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tesis_registros.each do |tesis_registro| %>
      <tr>
        <td><%= tesis_registro.tema %></td>
        <td><%= tesis_registro.director %></td>
        <td><%= tesis_registro.presidente %></td>
        <td><%= tesis_registro.secretario %></td>
        <td><%= tesis_registro.primer_vocal %></td>
        <td><%= tesis_registro.segundo_vocal %></td>
        <td><%= tesis_registro.tercer_vocal %></td>
        <td><%= tesis_registro.suplente %></td>
        <td><%= tesis_registro.user.nombre %></td>
        <td><%= tesis_registro.user.boleta %></td>
        <td><%= tesis_registro.created_at.strftime("%d/%m/%y a las %T %P") %></td>
        <td><%= tesis_registro.valida_consejero ? 'Si' : 'No' %></td>
        <td><%= tesis_registro.valida_coordinador ? 'Si' : 'No' %></td>
        <td><%= tesis_registro.estado %></td>
        <td><%= link_to 'Show', tesis_registro %></td>
        <td><%= link_to 'Edit', edit_tesis_registro_path(tesis_registro) %></td>
        <td><%= link_to 'Destroy', tesis_registro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

