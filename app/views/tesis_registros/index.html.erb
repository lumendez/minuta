<h3 class="sub">Peticiones de registro de tema de tesis, director y comisi&oacute;n revisora</h3>

<table class="table table-bordered table-tesis">

  <thead>
    <tr>
      <th>Tema</th>
      <th>Director</th>
      <th>Presidente</th>
      <th>Secretario</th>
      <th>Primer vocal</th>
      <th>Segundo vocal</th>
      <th>Tercer vocal</th>
      <th>Suplente</th>
      <th>Creado por</th>
      <th>Boleta</th>
      <th width="10%">Fecha</th>
      <th width="5%">Validacion consejero</th>
      <th width="5%">Validacion coordinador</th>
      <th width="15%">Estado</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tesis_registros.each do |tesis_registro| %>
      <tr>
        <td><%= tesis_registro.tema %></td>
        <td><%= tesis_registro.director %></td>
        <td><%= tesis_registro.presidente %></td>
        <td><%= tesis_registro.secretario %></td>
        <td><%= tesis_registro.primer_vocal %></td>
        <td><%= tesis_registro.segundo_vocal %></td>
        <td><%= tesis_registro.tercer_vocal %></td>
        <td><%= tesis_registro.suplente %></td>
        <td><%= tesis_registro.user.nombre %></td>
        <td><%= tesis_registro.user.boleta %></td>
        <td><%= tesis_registro.created_at.strftime("%d/%m/%y a las %T %P") %></td>
        <% if tesis_registro.valida_consejero == true %>
        <td class="success"><%= tesis_registro.valida_consejero ? 'Si' : 'No' %></td>
        <% else %>
        <td class="danger"><%= tesis_registro.valida_consejero ? 'Si' : 'No' %></td>
        <% end %>
        <% if tesis_registro.valida_coordinador == true %>
        <td class="success"><%= tesis_registro.valida_coordinador ? 'Si' : 'No' %></td>
        <% else %>
        <td class="danger"><%= tesis_registro.valida_coordinador ? 'Si' : 'No' %></td>
        <% end %>
        <% if tesis_registro.estado == "Pendiente" %>
        <td class="warning"><%= tesis_registro.estado %></td>
        <% elsif tesis_registro.estado == "Procede realizar trámite ante la SIP" %>
        <td class="success"><%= tesis_registro.estado %></td>
        <% else tesis_registro.estado == "Finalizado" %>
        <td class="info"><%= tesis_registro.estado %></td>
        <% end %>
        <td><%= link_to 'Detalles', tesis_registro %></td>
        <td><%= link_to 'Editar', edit_tesis_registro_path(tesis_registro) %></td>
        <td><%= link_to 'Eliminar', tesis_registro, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, TesisRegistro %>
<%= link_to 'Crear petición para registrar tema de tesis, director y comisión revisora', new_tesis_registro_path %>
<% end %>
