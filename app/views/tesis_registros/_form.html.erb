  </div>

  <div class="field">
    <%= f.label :presidente %>
    <%= collection_select(:tesis_registro, :presidente, ElectricaConsejero.all, :nombre, :nombre, {prompt: true}) %>
  </div>

  <div class="field">
    <%= f.label :secretario %>
    <%= collection_select(:tesis_registro, :secretario, ElectricaConsejero.all, :nombre, :nombre, {prompt: true}) %>
  </div>

  <div class="field">
    <%= f.label :primer_vocal %>
    <%= collection_select(:tesis_registro, :primer_vocal, ElectricaConsejero.all, :nombre, :nombre, {prompt: true}) %>
  </div>

  <div class="field">
