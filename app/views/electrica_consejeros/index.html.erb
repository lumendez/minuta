<h3 class="sub">Consejeros de ingenier&iacute;a El&eacute;ctrica</h3>

<table class="table table-bordered">

  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @electrica_consejeros.each do |electrica_consejero| %>
      <tr>
        <td><%= electrica_consejero.nombre %></td>
        <td><%= link_to 'Detalles', electrica_consejero %></td>
        <td><%= link_to 'Editar', edit_electrica_consejero_path(electrica_consejero) %></td>
        <td><%= link_to 'Eliminar', electrica_consejero, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

