<h3 class="sub">Nombres de los estados de las peticiones</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre de estado</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= estado.estado %></td>
        <td><%= link_to 'Información', estado %></td>
        <td><%= link_to 'Editar', edit_estado_path(estado) %></td>
        <td><%= link_to 'Eliminar', estado, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo nombre de estado', new_estado_path %>
